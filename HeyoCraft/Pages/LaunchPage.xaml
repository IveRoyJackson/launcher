<local:DialogPage x:Class="HeyoCraft.Pages.LaunchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Heyo.Pages;assembly=Heyo"
      xmlns:controls="clr-namespace:Heyo.Controls;assembly=Heyo"
      mc:Ignorable="d" 
      d:DesignHeight="100" d:DesignWidth="300"
      Title="正在启动" Height="80">
    <Border Background="White" Width="300" Height="80" CornerRadius="2">
        <Grid >
        <Viewbox Margin="0,0,0,30" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40">
            <TextBlock x:Name="Operation" Text="正在启动" Foreground="#FF505050" Padding="2"/>
        </Viewbox>
        <Viewbox Margin="0,30,0,0" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="Detailed" Text="——Minecraft" Foreground="#FF505050" Padding="5,0"/>
        </Viewbox>
            <ProgressBar BorderThickness="0" VerticalAlignment="Bottom" Height="2" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF00C8FF" IsIndeterminate="True"/>
        </Grid>
    </Border>
</local:DialogPage>
